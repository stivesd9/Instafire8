<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="#313435"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivProfileImage"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:layout_weight="0"/>


            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="@string/rahul"
                android:layout_margin="5dp"
                style="@style/darkxtheme3"
                android:layout_weight="4"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Button
                android:id="@+id/btnCat"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/shape_login_button"
                android:text="Categoría"
                android:textColor="#FCFCFD"
                tools:ignore="TouchTargetSizeCheck" />

            <ImageView
                android:id="@+id/btnDeletPosts"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_weight="0"
                android:layout_margin="5dp"
                android:src="@drawable/ic_delete"
                style="@style/darkxtheme3"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/darkxtheme3"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvRaitintext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:layout_marginTop="5dp"
                android:layout_margin="5dp"
                android:text="Clasificacíon:"
                android:textColor="#F8F8F8"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/tvRaiting"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#F8F8F8"
                android:layout_margin="5dp"
                style="@style/darkxtheme3"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
              />
        </LinearLayout>



        <TextView
            android:id="@+id/tvRelativeTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_margin="5dp"
            style="@style/darkxtheme3"
            android:text="@string/_48_minutes_ago" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/darkxtheme3"
            android:orientation="horizontal">
        <ImageView
            android:id="@+id/zoom"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="0"
            android:layout_margin="5dp"
            android:src="@drawable/ic_zoom"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/btnViewImg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_margin="5dp"
                style="@style/darkxtheme3"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                android:text="Ampliar imagen" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivPost"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="4dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_margin="5dp"
            style="@style/darkxtheme3"
            tools:text="Super cool post description!" />
    </LinearLayout>
</androidx.cardview.widget.CardView>